@ECHO OFF
@ECHO Create the NSIS installer
SETLOCAL
SET BUILD_DIR=build

CALL setup_environment.bat %*
IF ERRORLEVEL 1 GOTO error

MKDIR %BUILD_DIR%
PUSHD %BUILD_DIR%
%CMAKE% ..

%CMAKE% --build . --target PACKAGE

GOTO end
:error
PAUSE
SET FAILURE_CODE=%ERRORLEVEL%
:end
ENDLOCAL
EXIT /B %FAILURE_CODE%
